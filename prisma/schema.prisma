// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  PLAYER
  COACH
}

enum Position {
  GOLIE
  DEFENDER
  CENTER
  FORWARD
}

enum Orientation {
  L
  R
}

enum Category {
  OFFENSIVE
  DEFENSIVE
  TRANSITION
  GOALIE
  FITNESS
}

enum Tag {
  SHOOTING
  PASSING
  POSITIONING
  REFLEXES
  AGILITY
  COUNTER_ATTACK
}

model User {
  id             String       @id @default(auto()) @map("_id") @db.ObjectId
  name           String       @unique
  displayName    String       @default("Player")
  number         String?
  email          String?
  image          String?
  hashedPassword String
  role           Role         @default(PLAYER)
  position       Position?
  stick          Orientation?
  isReferee      Boolean      @default(false)
  license        String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  matchIds String[] @db.ObjectId
  matches  Match[]  @relation(fields: [matchIds], references: [id])

  refMatchIds String[] @db.ObjectId
  refMatches  Match[]  @relation("refMatches", fields: [refMatchIds], references: [id])

  practiceIds String[]   @db.ObjectId
  practices   Practice[] @relation(fields: [practiceIds], references: [id])
}

model Match {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  homeTeam String
  awayTeam String
  lineup   Json?
  score    String?
  date     DateTime
  time     String
  location String
  needRef  Boolean  @default(false)
  notes    String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userIds String[] @db.ObjectId
  users   User[]   @relation(fields: [userIds], references: [id])

  refIds String[] @db.ObjectId
  refs   User[]   @relation("refMatches", fields: [refIds], references: [id])
}

model Practice {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  date     DateTime
  time     String
  location String
  notes    String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userIds String[] @db.ObjectId
  users   User[]   @relation(fields: [userIds], references: [id])
}

model Drill {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  category    Category
  tags        Tag[]
  image       String?
  description String
  setup       String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
